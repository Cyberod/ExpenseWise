# Example environment variables for ExpenseWise

# Django
SECRET_KEY=your-secret-key
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (Render sets DATABASE_URL automatically for managed DBs)
# DATABASE_URL=mysql://username:password@hostname:port/dbname

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
EMAIL_USE_TLS=True
EMAIL_USE_SSL=False
DEFAULT_FROM_EMAIL=your-email@example.com

# Other secrets (e.g. for third-party APIs)
# API_KEY=...
